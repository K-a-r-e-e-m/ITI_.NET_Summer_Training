@model List<Trainee>
@{
    Layout = "_AdvLayout";
}
@*Convert the Model (Cating) that returened from action to type student
instead of dynamic type that detected in run time*@

<br />
<br />
<a href="/Trainee/New" class="btn btn-primary">New item</a>
<br />
<br />
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Grade</th>
            <th scope="col">Address</th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody class="table-group-divider">
        @foreach (var tran in Model)
        {
            <tr>
                <td>@tran.Id</td>
                <td>@tran.Name</td>
                <td>@tran.Grade</td>
                <td>@tran.Address</td>
                <td>
                    @* <a href="/Trainee/Details/@tran.Id" class="btn btn-outline-secondary">Details</a> *@
                    <a asp-action="Details" asp-controller="Trainee" asp-route-id="@tran.Id" class="btn btn-outline-secondary">Details</a>
                </td>
                <td>
                <td>
                    @*<a href="/Trainee/Edit/@tran.Id" class="btn btn-outline-info">Edit</a>*@
                    @Html.ActionLink("Edit", "Edit", "Trainee", new{ id = tran.Id }, new{ @class="btn btn-outline-info"} )
                    @*if there is no parameter for id           ^^^^^^^^^^^^^^^^^^^  we pass null instead*@
                <td>
                    <a href="/Trainee/Delete/@tran.Id"
                       class="btn btn-outline-danger"
                       onclick="return confirm('Are you sure you want to delete this department?');">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>

</table>

