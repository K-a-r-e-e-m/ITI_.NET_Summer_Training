@model Instructor
@{
    Layout = "_LayoutNewDetailsEdit";
}
<form action="/Instructor/Save" method="post">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div class="mb-3">
        <label asp-for="InstName">Name</label>
        <input asp-for="InstName" class="form-control" required />
        <span asp-validation-for="InstName" class="text-danger"></span>

    </div>
    <div class="mb-3">
        <label asp-for="Salary">Salary</label>
        <input asp-for="Salary" class="form-control" required />
        <span asp-validation-for="Salary" class="text-danger"></span>

    </div>
    <div class="mb-3">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control" required />
        <span asp-validation-for="Address" class="text-danger"></span>

    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
@section Scripts
{
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}